<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="colorPrimary">@color/startblue</item>
    </style>

    <style name="AppTheme.ActionBar">
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="colorPrimary">@color/startblue</item>
    </style>

    <style name="spinner_style">
        <item name="android:layout_width">200dp</item>
        <item name="android:layout_height">30dp</item>
        <item name="android:background">@drawable/gradient_spinner</item>
        <item name="android:color">@color/startblue</item>
        <item name="android:popupBackground">#FFFFFF</item>
    </style>

    <style name="spinner_styleassign">
        <item name="android:layout_width">200dp</item>
        <item name="android:layout_height">30dp</item>
        <item name="android:background">@drawable/textgradient</item>
        <item name="android:color">@color/gary</item>
        <item name="android:popupBackground">#FFFFFF</item>
    </style>

    <style name="text_style">
        <item name="android:background">@drawable/textgradient</item>
    </style>

    <style name="text_styleapp">
        <item name="android:background">@drawable/textgradientapp</item>
    </style>

    <style name="text_stylebox">
        <item name="android:background">@drawable/textgradientbox</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>

